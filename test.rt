<?xml version="1.0" encoding="utf-8"?>
<root>

    <!--
        Файл для подключения в unittest для модуля в качестве описателя приложения.
        В этом файле не подключаются никакие дополнительные модули,
        т.к. среда unit-тестирования сама воспроизводит себе нужную среду,
        в том числе и подключает модули, которые ей необходимы.
    -->

    <app appdir="#{path}" debug="true"/>

    <web>
        <resource name="app.webdir" path="#{path}/web"/>
    </web>

    <!-- настройки базы данных -->
    <x-include path="db-ini.rt"/>

    <!-- ===================================================================== -->

    <!-- перекрытие параметров для разработчика -->
    <x-include path="_test.rt" required="false"/>

</root>
